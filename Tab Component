<div class="tabs">
    <nav>
        <ul>
            <sly data-sly-list.tab="${model.tabs}">
                <li>${tab.tabName}</li>
            </sly>
        </ul>
    </nav>

    <div class="tab-content">
        <sly data-sly-list.tab="${model.tabs}">
            <section>
                <sly data-sly-list.item="${tab.items}">
                    <div class="tab-item">
                        <img src="${item.image}" alt="${item.title}">
                        <h3>${item.title}</h3>
                        <p>${item.description}</p>
                    </div>
                </sly>
            </section>
        </sly>
    </div>
</div>

