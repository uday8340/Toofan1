        <daily jcr:primaryType="nt:unstructured" value="daily" text="Published Daily"/>
        <weekly jcr:primaryType="nt:unstructured" value="weekly" text="Published Weekly"/>
        <none jcr:primaryType="nt:unstructured" value="none" text="None"/>
    </values>

</publicationFrequency>
