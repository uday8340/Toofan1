(function (document, $) {
    "use strict";

    // When the dialog gets injected
    $(document).on("foundation-contentloaded", function (e) {
        // Handle the checkboxes inside the multifield
        $(".cq-dialog-checkbox-showhide", e.target).each(function () {
            checkboxShowHideHandler($(this));
        });
    });

    // Handle changes to the checkboxes
    $(document).on("change", ".cq-dialog-checkbox-showhide", function (e) {
        checkboxShowHideHandler($(this));
    });

    // Handle the addition of new fields in a multifield
    $(document).on("click", ".coral-Button[data-action='add']", function (e) {
        var multifield = $(this).closest(".coral-Multifield");
        setTimeout(function () {
            multifield.find(".cq-dialog-checkbox-showhide").each(function () {
                checkboxShowHideHandler($(this));
            });
        }, 500); // Slight delay to ensure the new field is added
    });

    function checkboxShowHideHandler(el) {
        el.each(function (i, element) {
            if ($(element).is("coral-checkbox")) {
                // Handle Coral3 base checkboxes
                Coral.commons.ready(element, function (component) {
                    showHide(component, $(element).closest(".coral-Multifield-item"));
                    component.on("change", function () {
                        showHide(component, $(element).closest(".coral-Multifield-item"));
                    });
                });
            } else {
                // Handle Coral2 based checkboxes
                var component = $(element).data("checkbox");
                if (component) {
                    showHide(component, $(element).closest(".coral-Multifield-item"));
                }
            }
        });
    }

    function showHide(component, multifieldItem) {
        console.log("showing");
        // Get the selector to find the target elements. It's stored as a data attribute
        var target = $(component).attr("data-cq-dialog-checkbox-showhide-target");
        var $target = multifieldItem.find(target); // Scope the target within the current multifield item

        if ($target.length) {
            $target.addClass("hide");
            if (component.checked) {
                $target.removeClass("hide");
            }
        }
    }
})(document, Granite.$);
