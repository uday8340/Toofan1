(function (document, $) {
    "use strict";

    // When the dialog is loaded
    $(document).on("foundation-contentloaded", function (e) {
        // Apply the handler to checkboxes within the dialog
        checkboxShowHideHandler($(".cq-dialog-checkbox-showhide", e.target));
    });

    // When a checkbox is changed
    $(document).on("change", ".cq-dialog-checkbox-showhide", function (e) {
        checkboxShowHideHandler($(this));
    });

    function checkboxShowHideHandler(el) {
        el.each(function (i, element) {
            if ($(element).is("coral-checkbox")) {
                Coral.commons.ready(element, function (component) {
                    toggleVisibility(component, element);
                    component.on("change", function () {
                        toggleVisibility(component, element);
                    });
                });
            }
        });
    }

    function toggleVisibility(component, element) {
        // Find the specific multifield item containing the checkbox
        let $multifieldItem = $(element).closest(".coral-Multifield-item");

        // Find the target for the specific checkbox within the multifield item
        let targetSelector = $(element).data("cqDialogCheckboxShowhideTarget");
        let $target = $multifieldItem.find(targetSelector);

        if (targetSelector) {
            // Add 'hide' class to the target by default
            $target.addClass("hide");

            // Remove 'hide' class if the checkbox is checked
            if (component.checked) {
                $target.removeClass("hide");
            } else {
                $target.addClass("hide");
            }
        }
    }
})(document, Granite.$);
