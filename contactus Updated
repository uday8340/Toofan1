 @Test
    public void testInitWithLinks() {
        // Mock the behavior of resource.getChild("links")
        when(resource.getChild("links")).thenReturn(linkResource);

        // Mock the behavior of linkResource.getChildren() to return a list of child link resources
        when(linkResource.getChildren()).thenReturn(Collections.singletonList(childLinkResource));

        // Mock the behavior of childLinkResource.adaptTo(Link.class)
        CardModel.Link mockLink = new CardModel.Link();
        when(childLinkResource.adaptTo(CardModel.Link.class)).thenReturn(mockLink);

        // Call the init method to initialize the links list
        subsection.init();

        // Assert that the links list is initialized and contains the mock link
        assertNotNull("Links list should be initialized", subsection.getLinks());
        assertNotNull("Links list should contain elements", subsection.getLinks().get(0));
    }
