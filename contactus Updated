@Test
    public void testInitWithValidResourceAndChildren() {
        // Mocking the resource to have children
        when(resource.hasChildren()).thenReturn(true);
        when(resource.getChild("subsection")).thenReturn(subsectionResource);
        when(subsectionResource.getChildren()).thenReturn(Collections.singletonList(child));

        // Mocking the child to adapt to Subsection class
        CardModel.Subsection subsection = new CardModel.Subsection();
        when(child.adaptTo(CardModel.Subsection.class)).thenReturn(subsection);

        // Execute the method under test
        cardModel.init();

        // Verifying that the subsection list is initialized and contains the adapted child
        assertNotNull(cardModel.getSubsection());
        assertEquals(1, cardModel.getSubsection().size());
        assertSame(subsection, cardModel.getSubsection().get(0));
    }
